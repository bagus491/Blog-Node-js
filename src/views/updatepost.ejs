<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <%- include('./navFor') %>
     <h1 class="text-center">form Updatepost</h1>
    <div class="container">
        <div class="form-addpost" style="width: 400px; margin: auto;">
                 <form method="post" action="/updatepost?_method=PUT" enctype="multipart/form-data">
                    <input type="hidden" name="_id" value="<%= getPost._id %>">
                     <div class="mb-3">
                       <label for="Title" class="form-label">Title</label>
                       <input type="text" class="form-control" id="Title" name="Title" value="<%= getPost.Title %>" required>
                     </div>
                     <div class="mb-3">
                         <label for="Preparagraf" class="form-label">Preparagraf</label>
                         <input type="text" class="form-control" id="Preparagraf" name="Preparagraf" value="<%= getPost.Preparagraf %>" required>
                       </div>
                       <div class="mb-3">
                         <label for="Paragraf" class="form-label">Paragraf</label>
                         <br>
                         <textarea  id="Paragraf"  name="Paragraf" style="width: 400px; height: 300px;" required><%= getPost.Paragraf %></textarea>
                       </div>
                       <div class="mb-3">
                        <label for="Avatar" class="form-label">Avatar</label>
                        <input type="file" class="form-control" id="Avatar" name="Avatar" required>
                      </div>
                       <div class="mb-3">
                         <label for="Author" class="form-label">Author</label>
                         <input type="text" class="form-control" id="Author" name="Author" value="<%= getPost.Author%>" required>
                       </div>
                     <button type="submit" class="btn btn-primary">Submit</button>
                   </form>
                   <bR>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>